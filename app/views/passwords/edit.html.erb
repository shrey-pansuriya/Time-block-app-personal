<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <%= form_with model: Current.user, url: edit_password_path, local: true, data: { turbo: false } do |form| %>
        <% if form.object.errors.any? %>
          <div class="alert alert-danger">
            <strong>Please fix the following errors:</strong>
            <ul>
              <% form.object.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="mb-3">
          <%= form.label :email, class: 'form-label' %>
          <%= form.email_field :email, class: "form-control", placeholder: "Enter new email" %>
        </div>

        <div class="mb-3">
          <%= form.label :password, class: 'form-label' %>
          <%= form.password_field :password, class: "form-control", placeholder: "Enter new password" %>
        </div>

        <div class="mb-3">
          <%= form.label :password_confirmation, class: 'form-label' %>
          <%= form.password_field :password_confirmation, class: "form-control", placeholder: "Confirm new password" %>
        </div>
        
        <div class="mb-3">
          <%= form.submit "Update", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>



